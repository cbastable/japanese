<header id="header"><%=render "static_pages/header.html.erb" %></header>
<div class="full-width-container">
	<div class="container">
		<div class="kanji">
			<div class="set-number"><%=@current_number%>/<%=@count%></div>
			<%=link_to "#{@word.word}", random_word_path(@collection.name) %>
		</div>
		<div class="readings">
			<div class="word-reading"><%=@word.reading%></div>
		</div>
		<div class="translation"><%=@word.translation%></div>
		<div class="return">Return to: <%=link_to "Home", root_path%> | <%= link_to "Study compound kanji", words_path%> | <%=link_to "#{@collection.name.upcase}", word_set_path(@collection.name)%></div>
	</div>
</div>