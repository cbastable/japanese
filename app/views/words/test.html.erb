 <div class="full-width-container">
	<div class="container">
		<div class="kanji">
			<div class="set-number"><%=link_to "#{@collection.name.upcase}", word_set_path(@collection.name)%></div>
			<div class="character">
				<%=@word.word%>
				<div class="next" id="pass"><%=link_to "Pass", word_test_path(@collection.name, @next_word.word) %>
			</div>
			</div>
		</div>

		<div class="readings">
			<div class="kunyomi-answer"></div>
		</div>
		<div class="answers">
			<form id="target" action="">
			  Readings: <input type="text" name="readings" id="readings"><span></span><br>
			  <input type="submit" value="Submit" class="btn btn-medium btn-primary">
			</form>
	    </div>
		<div class="kunyomi-test"><%=@word.reading%></div>
		<div class="translation-test"><%=@word.translation%></div>
		<div class="return">Return to: <%=link_to "Home", root_path%> | <%= link_to "Study compound kanji", words_path%> | <%=link_to "#{@collection.name.upcase}", word_set_path(@collection.name)%>
		</div>
	</div>
</div>